*
  font-family: 'Roboto', sans-serif

body
  overflow-y scroll
  margin 0

#root > div
  min-height 100vh
  width 100%
  display flex
  flex-direction column
  justify-content center
  align-content center
  
  main
    display: flex
    flex-direction column
    justify-content center
    flex-wrap wrap
    align-content center

button
  cursor pointer

.column
  display inline-flex
  flex-direction column
  
.tilda
  margin auto 5px
  font-size 20px
  
.muted, .muted *
  border-color #8f8f8f
  color #8f8f8f