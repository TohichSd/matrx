.matrix-container
  display flex
  flex-direction row
  justify-content center
  align-items center
  margin 0 auto

.matrix-wrapper
  display flex
  flex-direction row
  padding 0
  
.step
  display inline-flex
  flex-direction row
  white-space nowrap
  
.matrix
  display inline-block
  border-radius 8px
  border-width 0 2px 0 2px
  border-color black
  border-style solid
  padding 0 5px

.matrix-table

  tr
    &.selected
      background-color #6699ff
      color: white
      cursor not-allowed
  
  td
    font-size 20px
    padding 0 1px

  &.selectable
    tr
      cursor pointer
    
      &:hover
        background-color #383838
        color: white

.operations-column
  margin-left 5px

  > div
    display inline-block
    margin auto 0